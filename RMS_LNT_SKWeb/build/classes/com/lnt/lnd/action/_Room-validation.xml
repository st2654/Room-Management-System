  <field name="seating_capacity">
    <field-validator type="int">
       <message>Enter Integer Values</message>
    </field-validator>
  </field>
    
  <field name="address">
        <field-validator type="required">
           <param name="trim">true</param>
           <message>Address field cannot be empty.</message>
  </field-validator>
        <field-validator type="requiredstring">
           <message>Address field can only be string.</message>
        </field-validator>
  </field>
    
  <field name="remarks">
         <field-validator type="required">
           <message>Remark field cannot be empty.</message>
        </field-validator>
        <field-validator type="requiredstring">
           <param name="trim">true</param>
           <message>Remark field is Mandatory</message>
        </field-validator>
  </field> 
 
  <field name="no_of_participants">
     <field-validator type="required">
       <message>The number of participants field cannot be empty.</message>
     </field-validator>
     <field-validator type="int">
       <message>Integer value required</message>
    </field-validator>
  </field>
  

</validators>