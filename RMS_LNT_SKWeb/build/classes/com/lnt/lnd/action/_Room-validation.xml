<validators>

  <field name="room_name">
    <field-validator type="required">
       <param name="trim">true</param>
       <message>Room name cannot be empty</message>
    </field-validator>
    <field-validator type="requiredstring">
       <param name="max">20</param>
       <message>Room name can only be a string(maximum 20 characters)</message>
    </field-validator>
  </field>


